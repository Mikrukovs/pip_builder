# Development Dockerfile для Next.js

FROM node:20-alpine

WORKDIR /app

# Устанавливаем зависимости для native модулей
RUN apk add --no-cache libc6-compat openssl python3 make g++

# Копируем package файлы
COPY package*.json ./

# Копируем схему Prisma
COPY prisma ./prisma/

# Устанавливаем зависимости БЕЗ postinstall
RUN npm ci --ignore-scripts

# Генерируем Prisma Client
RUN npx prisma generate

# Копируем остальные файлы (они будут перезаписаны volume mount)
COPY . .

# Открываем порт
EXPOSE 3000

# Запускаем dev сервер
CMD ["npm", "run", "dev"]
