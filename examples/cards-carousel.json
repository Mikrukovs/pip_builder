{
  "name": "CardsCarousel",
  "displayName": "–ö–∞—Ä—É—Å–µ–ª—å –∫–∞—Ä—Ç–æ—á–µ–∫",
  "category": "custom",
  "icon": "üé†",
  "description": "–ì–æ—Ä–∏–∑–æ–Ω—Ç–∞–ª—å–Ω–∞—è –∫–∞—Ä—É—Å–µ–ª—å –∫–∞—Ä—Ç–æ—á–µ–∫ —Å —Ñ–æ—Ç–æ, –∑–∞–≥–æ–ª–æ–≤–∫–æ–º –∏ –ø–æ–¥–∑–∞–≥–æ–ª–æ–≤–∫–æ–º",

  "template": {
    "type": "list",
    "dataKey": "cards",
    "style": {
      "display": "flex",
      "flexDirection": "row",
      "overflowX": "auto",
      "overflowY": "hidden",
      "gap": 12,
      "padding": 8,
      "scrollSnapType": "x mandatory",
      "WebkitOverflowScrolling": "touch",
      "scrollbarWidth": "none"
    },
    "itemTemplate": {
      "type": "container",
      "style": {
        "width": 260,
        "minWidth": 260,
        "flexShrink": 0,
        "borderRadius": 12,
        "background": "#ffffff",
        "boxShadow": "0 2px 8px rgba(0,0,0,0.1)",
        "overflow": "hidden",
        "scrollSnapAlign": "start"
      },
      "children": [
        {
          "type": "image",
          "prop": "item.image",
          "style": {
            "width": "100%",
            "height": 160,
            "objectFit": "cover"
          }
        },
        {
          "type": "container",
          "style": {
            "padding": 12
          },
          "children": [
            {
              "type": "heading",
              "prop": "item.title",
              "style": {
                "fontSize": 16,
                "fontWeight": 600,
                "marginBottom": 4,
                "color": "#000000"
              }
            },
            {
              "type": "text",
              "prop": "item.subtitle",
              "style": {
                "fontSize": 13,
                "color": "#666666",
                "lineHeight": 1.4
              }
            }
          ]
        }
      ]
    }
  },

  "defaultProps": {
    "cards": [
      {
        "image": "",
        "title": "–ó–∞–≥–æ–ª–æ–≤–æ–∫ 1",
        "subtitle": "–ü–æ–¥–∑–∞–≥–æ–ª–æ–≤–æ–∫ –ø–µ—Ä–≤–æ–π –∫–∞—Ä—Ç–æ—á–∫–∏"
      },
      {
        "image": "",
        "title": "–ó–∞–≥–æ–ª–æ–≤–æ–∫ 2",
        "subtitle": "–ü–æ–¥–∑–∞–≥–æ–ª–æ–≤–æ–∫ –≤—Ç–æ—Ä–æ–π –∫–∞—Ä—Ç–æ—á–∫–∏"
      },
      {
        "image": "",
        "title": "–ó–∞–≥–æ–ª–æ–≤–æ–∫ 3",
        "subtitle": "–ü–æ–¥–∑–∞–≥–æ–ª–æ–≤–æ–∫ —Ç—Ä–µ—Ç—å–µ–π –∫–∞—Ä—Ç–æ—á–∫–∏"
      }
    ]
  },

  "settings": [
    {
      "key": "cards",
      "label": "–ö–∞—Ä—Ç–æ—á–∫–∏",
      "type": "items",
      "itemFields": [
        { "key": "image", "label": "–§–æ—Ç–æ", "type": "image" },
        { "key": "title", "label": "–ó–∞–≥–æ–ª–æ–≤–æ–∫", "type": "text" },
        { "key": "subtitle", "label": "–ü–æ–¥–∑–∞–≥–æ–ª–æ–≤–æ–∫", "type": "text" }
      ]
    }
  ],

  "behavior": {
    "type": "state-machine",
    "initial": "idle",
    "context": {
      "currentIndex": 0
    },
    "states": {
      "idle": {
        "on": {
          "SWIPE_LEFT": {
            "target": "idle",
            "actions": [
              { "type": "increment", "key": "currentIndex", "by": 1 },
              { "type": "haptic", "hapticType": "light" }
            ]
          },
          "SWIPE_RIGHT": {
            "target": "idle",
            "actions": [
              { "type": "decrement", "key": "currentIndex", "by": 1 },
              { "type": "haptic", "hapticType": "light" }
            ]
          }
        }
      }
    }
  }
}
